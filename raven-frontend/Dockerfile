# build environment
FROM node:18-alpine as build

ARG _REACT_APP_ENV
ARG _REACT_APP_CLIENT_ID
ARG _REACT_APP_MEASUREMENT_ID
ARG _REACT_APP_AUTH0_CALLBACK_URL
ARG _REACT_APP_AUTH0_CLIENT_ID
ARG _REACT_APP_AUTH0_DOMAIN
ARG _REACT_APP_AUTH0_AUDIENCE
ENV REACT_APP_ENV $_REACT_APP_ENV
ENV REACT_APP_CLIENT_ID $_REACT_APP_CLIENT_ID
ENV REACT_APP_MEASUREMENT_ID $_REACT_APP_MEASUREMENT_ID
ENV REACT_APP_AUTH0_CALLBACK_URL $_REACT_APP_AUTH0_CALLBACK_URL
ENV REACT_APP_AUTH0_CLIENT_ID $_REACT_APP_AUTH0_CLIENT_ID
ENV REACT_APP_AUTH0_DOMAIN $_REACT_APP_AUTH0_DOMAIN
ENV REACT_APP_AUTH0_AUDIENCE $_REACT_APP_AUTH0_AUDIENCE

WORKDIR /app
COPY package*.json ./
RUN npm install
COPY . .
RUN npm run build

# production environment
FROM fholzer/nginx-brotli:v1.12.2

WORKDIR /etc/nginx
ADD nginx.conf /etc/nginx/nginx.conf

COPY --from=build /app/build /usr/share/nginx/html
EXPOSE 443
CMD ["nginx", "-g", "daemon off;"]